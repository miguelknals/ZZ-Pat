<Window x:Class="ProcesaManifiesto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ProcesaManifiesto" Height="530" Width="995">
    <Grid Margin="5,0,-5,0">
        <TextBox x:Name="txtArchivoMF" HorizontalAlignment="Left" Height="23" Margin="193,17,0,0" VerticalAlignment="Top" Width="784" AllowDrop="True"/>
        <Button x:Name="btnCarga" Content="2) Load and run PaT manifest" HorizontalAlignment="Left" Margin="10,146,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox x:Name="txtSalida" HorizontalAlignment="Left" Height="92" Margin="10,397,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="740" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <DataGrid x:Name="dgCarpetas"  HorizontalAlignment="Left" Margin="10,184,0,0" VerticalAlignment="Top" Height="200" Width="967"/>
        <Label Content="1) Drag and drop a PaT MF File:
               " HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chkImportar" Content="Import folders in current OpenTM2 environment" HorizontalAlignment="Left" Height="17" Margin="194,45,0,0" VerticalAlignment="Top" Width="330" IsChecked="True"/>
        <CheckBox x:Name="chkCorreo" Content="Send email to translator as ack and/or counting and invoicing info" HorizontalAlignment="Left" Height="17" Margin="194,67,0,0" VerticalAlignment="Top" Width="430"/>
        <CheckBox x:Name="chkTengoTodo" Content="Everything ZZ-Pat needs (translated folder(s)) is on the MFT directory. ZZ-Pat will not try to retrevive any folder from the repository." HorizontalAlignment="Left" Height="17" Margin="194,88,0,0" VerticalAlignment="Top" Width="679"/>
        <CheckBox x:Name="chkContajeAdicional" Content="Try to end folders with IBM official profiles if available" HorizontalAlignment="Left" Height="17" Margin="194,112,0,0" VerticalAlignment="Top" Width="489" IsChecked="True"/>

    </Grid>
</Window>
